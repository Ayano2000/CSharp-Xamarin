<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrismApp.Views.MainPage"
             Title="Weather Tracking">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="Go to add cities" />
        <Button Text="View City Data" Command="{Binding GetData}" />
        <Button Text="Add City" Command="{Binding ShowPopupCommand}" />
        <Button Text="View my location in maps" Command="{Binding MapViewCommand}" />
    </StackLayout>

</ContentPage>